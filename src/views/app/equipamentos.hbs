				<script>
		fetch('/api/exercicios/')
			.then(res => res.json())
			.then(data => {
						  const nome_exercicios = data.result
						 // console.log(nome_exercicios)
						  //  buildTable(nome_exercicios)
						  fetch('/api/equipamentos/')
							.then(res => res.json())
							.then(data_equipamento => {
								const nome_equipamentos = data_equipamento.result
								//console.log(nome_equipamentos)
								//console.log(nome_equipamentos)
								
								buildTable(nome_exercicios, nome_equipamentos)
					
				})

					})

		function renderNames(names){
			const container = document.getElementById('exercicios');
			container.innerHtml = '';
				for (const name of names) {
				  const p = document.createElement('p');
				  const textNode = document.createTextNode(name);
				  p.appendChild(textNode);
				  container.appendChild(p);
				}
		}

		function buildTable(data, data_equipamento){
			var table = document.getElementById('myTable');

	  // Mostrar todos os dados e meter a primeira palavra em maisculo
	  if(data.length > 0){
		for(var i = 0; i<data_equipamento.length; i++){
				  var row = ` <tr>
								  <td>${data_equipamento[i].id}</td>
								  <td>${data_equipamento[i].nome}</td>
								
							  </tr>`
				  table.innerHTML += row
			  }
	  } else {
		var row = `<tr><td colspan="6" class="text-center">Nenhuma Dado encontrada</td></tr>`;
		table.innerHTML += row;
	  }



		}
