<script>
  fetch('/api/musculos/')
  .then(res => res.json())
  .then(data => {
    const nome_musculos = data.result

    buildTable_musculo(nome_musculos)
  })
  function buildTable_musculo(data_musculos) {
    var dropdown_div = document.getElementById('dropdown-musculos');

    data_musculos.forEach(musculo => {

      var dropdown = `
      <li><a class="dropdown-item" href="/${musculo.nome}">${musculo.nome}</a></li>
      `
      dropdown_div.innerHTML += dropdown
    })


  }

</script>

